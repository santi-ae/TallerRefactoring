import java.time.LocalDate;
import java.util.List;
import java.util.Collections;

public class ConsultaData {
    private ServicioMedico servicioMedico;
    private String diagnostico;
    private String tratamiento;
    private List<String> examenesMedicos;

    // Constructor
    public ConsultaDatos(ServicioMedico servicioMedico, String diagnostico, 
                        String tratamiento, List<String> examenesMedicos) {
       
        this.servicioMedico = servicioMedico;
        this.diagnostico = diagnostico;
        this.tratamiento = tratamiento;
        this.examenesMedicos = examenesMedicos;
    }

    // Getters
    public ServicioMedico getServicioMedico() {
         return servicioMedico; }
    public String getDiagnostico() { 
        return diagnostico; }
    public String getTratamiento() {
         return tratamiento; }
    public List<String> getExamenesMedicos() { 
        return examenesMedicos; }

    public void addExamen(String examen) {
    this.examenesMedicos.add(examen);
}

    public void removeExamen(String examen) {
    this.examenesMedicos.remove(examen);
    }
}